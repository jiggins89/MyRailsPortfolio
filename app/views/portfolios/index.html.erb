<h1>Portfolios</h1>

<div class="ui three column grid">
  <% @portfolios.each do |p| %>
    <div class="column">
      <div class="ui card">
        <div class="image">
          <%= image_tag(p.image_thumb) %>
        </div>
        <div class="content">
          <a class="header"><%= p.title %></a>
          <div class="meta">
            <span class="date"><%= p.subtitle %></span>
          </div>
          <div class="description">
            <%= p.body %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
