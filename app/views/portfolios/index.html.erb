<div style="padding: 40px 0px">
  <a href="/portfolios/new">
    <button class="ui button">New Portfolio</button>
  </a>
</div>

<div class="ui three column grid">
  <% @portfolios.each do |p| %>
    <div class="column">
      <div class="ui card">
        <div class="image">
          <% if p.image_thumb.nil? %>
            <%=  image_tag("https://via.placeholder.com/350x250") %>
          <% else %>
            <%= image_tag(p.image_thumb) %>
          <% end %>
        </div>
        <div class="content">
          <a class="header"><%= p.title %></a>
          <div class="meta">
            <span class="date"><%= p.subtitle %></span>
          </div>
          <div class="description">
            <%= p.body %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
